{
    "languageserver": {
        "python": {
            "command": "pylsp",
            "rootPatterns": [".py"],
            "trace.server": "verbose",
            "filetypes": ["python"]
        },
        "cc": {
            "command": "ccls",
            "rootPatterns": [".c",".cc",".cpp",".h",".hpp"],
            "trace.server": "verbose",
            "filetypes": ["c","cpp"]
        }
    }
}
