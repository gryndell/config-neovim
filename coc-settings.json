{
    "languageserver": {
        "python": {
            "command": "pylsp",
            "rootPatterns": [".py"],
            "trace.server": "verbose",
            "filetypes": ["python"]
        },
        "cc": {
            "command": "ccls",
            "rootPatterns": [".c",".cc",".cpp",".h",".hpp"],
            "trace.server": "verbose",
            "filetypes": ["c","cpp"]
        },
        "go": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "trace.server": "verbose",
            "filetypes": ["go"]
        },
        "rust": {
            "command": "rls",
            "rootPatterns": ["Cargo.toml"],
            "trace.server": "verbose",
            "filetypes": ["rust"]
        }
    }
}
